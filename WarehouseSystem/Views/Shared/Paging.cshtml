@{
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;

    }
}
<div class="container">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (pager.CurrentPage > 1)
            {
                <li class="page-item"></li>
                <a class="page-link" asp-controller="Country" asp-action="CountryList" asp-route-pg="1">First</a>
                <li class="page-item"></li>
                <a class="page-link" asp-controller="Country" asp-action="CountryList" asp-route-pg="@(pager.CurrentPage-1)">Previous</a>

            }
            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <li class="page-item @(pge==pager.CurrentPage? "active":")")"></li>
                <a class="page-link" asp-controller="Country" asp-action="CountryList" asp-route-pg="@pge">@pge</a>
            }
            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item"></li>
                <a class="page-link" asp-controller="Country" asp-action="CountryList" asp-route-pg="@(pager.CurrentPage-1)">Next</a>
                <li class="page-item"></li>
                <a class="page-link" asp-controller="Country" asp-action="CountryList" asp-route-pg="@(pager.TotalPages)">Last</a>

            }

        </ul>
    }

</div>