@model SignIn
@{
    Layout = null;
}
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>


<form method="post">
    <div class="alert alert-primary" role="alert">
        @ViewData["result"]
    </div>

    <div class="mb-3 ms-3">
        <label class="form-label">Username</label>
        <input type="text" class="form-control" asp-for=Email placeholder="username">
    </div>
    <div class="mb-3 ms-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" asp-for=Password placeholder="Password">
    </div>
    <div class="mb-3 ms-3">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="remmberme">
            <label class="form-check-label">
                remember me
            </label>
        </div>
    </div>
    <div class="mb-3 ms-3">
        <input type="submit" value="Login" asp-action="CheckPassward" class="btn btn-primary" />
    </div>
    <div class="text-center">
        
        <a type="submit" value="Create Account" asp-action="CreateAccount" >Create Account</a>
    </div>

</form>

